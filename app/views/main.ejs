<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>5성매장관리</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="vendors/feather/feather.css" />
    <link rel="stylesheet" href="vendors/ti-icons/css/themify-icons.css" />
    <link rel="stylesheet" href="vendors/css/vendor.bundle.base.css" />
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link
      rel="stylesheet"
      href="vendors/datatables.net-bs4/dataTables.bootstrap4.css"
    />
    <link rel="stylesheet" href="vendors/ti-icons/css/themify-icons.css" />
    <link
      rel="stylesheet"
      type="text/css"
      href="js/select.dataTables.min.css"
    />
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="css/vertical-layout-light/style.css" />
    <!-- endinject -->
    <link rel="shortcut icon" href="images/favicon.png" />
  </head>

  <body>
    <div class="container-scroller">
      <!-- partial:partials/_navbar.html -->
      <%- include('navbar.html') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial -->
        <!-- partial:partials/_sidebar.html -->
        <nav class="sidebar sidebar-offcanvas" id="sidebar">
          <ul class="nav">
            <li class="nav-item">
              <a class="nav-link" href="/main">
                <i class="icon-grid menu-icon"></i>
                <span class="menu-title">주문관리</span>
              </a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link"
                data-toggle="collapse"
                href="#auth"
                aria-expanded="false"
                aria-controls="auth"
              >
                <i class="icon-head menu-icon"></i>
                <span class="menu-title">출퇴근하기</span>
                <i class="menu-arrow"></i>
              </a>
              <div class="collapse" id="auth">
                <ul class="nav flex-column sub-menu">
                  <li class="nav-item">
                    <a class="nav-link" href="/login/in"> 출근 </a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/login/out"> 퇴근 </a>
                  </li>
                </ul>
              </div>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/views/login_manager.html">
                <i class="icon-contract menu-icon"></i>
                <span class="menu-title">관리자모드</span>
              </a>
            </li>
          </ul>
        </nav>

        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="row">
              <div class="col-md-12 grid-margin">
                <div class="row">
                  <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                    <h3 class="font-weight-bold">주문관리</h3>
                    <div class="row">
                      <div class="col-md-7 grid-margin transparent">
                        <div class="card">
                          <div class="card-body">
                            <p class="card-title">주문등록</p>
                            <div class="row">
                              <% var i =0; %> <%
                              Menudatas.forEach(function(data) { %>
                              <div
                                class="col-md-3 mb-4 stretch-card transparent"
                              >
                                <div
                                  class="card card-tale"
                                  onclick="menuclick('<%=data.menu_name%>', <%=i%>, <%=data.menu_price%>);"
                                >
                                  <%i++;%>
                                  <div class="card-body">
                                    <p class="mb-4"><%=data.menu_name%></p>
                                    <p><%=data.menu_img%></p>
                                    <p><%=data.menu_price%>원</p>
                                  </div>
                                </div>
                              </div>
                              <% }) %>
                            </div>
                          </div>
                        </div>
                        <div class="card">
                          <div class="card-body">
                            <div id="list"></div>
                            <h3>Total: <span id="result">0</span>원</h3>
                            <button
                              type="button"
                              class="btn btn-primary float-right"
                            >
                              완료
                            </button>
                          </div>
                        </div>
                      </div>
                      <div class="col-md-5 grid-margin transparent">
                        <div class="card">
                          <div class="card-body">
                            <div class="row">
                              <div class="card-title">
                                주문내역
                                <button type="button" class="btn btn-secondary">
                                  대기열
                                </button>
                                <button type="button" class="btn btn-primary">
                                  완료
                                </button>
                              </div>
                            </div>
                            <div class="row">
                              <% Orderdatas.forEach(function(data) { %>
                              <div
                                class="col-md-3 mb-4 stretch-card transparent"
                              >
                                <div class="card card-tale">
                                  <div class="card-body">
                                    <!--<p class="mb-4"><%=data.order_list%></p>-->
                                    <p><%=data.order_price%>원</p>
                                    <p><%=data.order_state%></p>
                                  </div>
                                </div>
                              </div>
                              <% }) %>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- content-wrapper ends -->
          <!-- partial -->
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <script>
      function menuclick(name, num, price) {
        //alert(name + num);
        newnum = document.getElementById(num);
        if (newnum == null) {
          newmenu = document.createElement('div');
          newmenu.innerText = name + ' X';
          newnum = document.createElement('span');
          newnum.setAttribute('id', num);
          newnum.innerText = 1;
          newmenu.appendChild(newnum);
          document.getElementById('list').appendChild(newmenu);
        } else {
          newnum.innerText = parseInt(newnum.innerText) + 1;
        }
        result = document.getElementById('result');
        result.innerText = parseInt(result.innerText) + price;
      }
    </script>
    <!-- plugins:js -->
    <script src="vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="vendors/chart.js/Chart.min.js"></script>
    <script src="vendors/datatables.net/jquery.dataTables.js"></script>
    <script src="vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <script src="js/dataTables.select.min.js"></script>

    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="js/off-canvas.js"></script>
    <script src="js/hoverable-collapse.js"></script>
    <script src="js/template.js"></script>
    <script src="js/settings.js"></script>
    <script src="js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <script src="js/dashboard.js"></script>
    <script src="js/Chart.roundedBarCharts.js"></script>
    <!-- End custom js for this page-->
  </body>
</html>
