        <!-- partial -->
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="col-12 col-xl-8 mb-4 mb-xl-0">
              <h3 class="font-weight-bold">재고관리</h3>
            </div>
            <div class="row">
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <button
                      type="button"
                      class="btn btn-primary"
                      onclick="location.href='/stockpage/create'"
                    >
                      재고추가
                    </button>
                    <div class="table-responsive">
                      <table class="table table-striped">
                        <thead>
                          <tr style="text-align: center">
                            <th>재고명</th>
                            <th>수량</th>

                            <th>가격</th>
                            <th>단위</th>
                            <th>납품업체</th>
                            <th>업체 번호</th>
                            <th>
                              <!--stock_name: String
                            stock_quantity: Number,
                            order_company: String,
                          order_price: Number
                          order_unit: String,
                        -->
                            </th>
                          </tr>
                        </thead>
                        <% datas.forEach(function(data) { %>
                        <tbody>
                          <tr class="stock-info" style="text-align: center">
                            <td><%= data.stock_name %></td>
                            <td><%= data.stock_quantity %></td>

                            <td><%= data.stock_order.order_price %></td>
                            <td><%=data.stock_order.order_unit %></td>
                            <td><%= data.stock_order.order_company%></td>
                            <td><%= data.stock_order.order_phone %></td>
                            <td>
                              <button
                                type="button"
                                class="btn"
                                onclick="location.href='/stockpage/<%= data._id %>'"
                                style="background-color: #b4ace2"
                              >
                                재고조회
                              </button>
                              <button
                                style="
                                  margin: 0px 0px 0px 10px;
                                  background-color: #91a1dc;
                                "
                                type="button"
                                class="btn trigger"
                                data-toggle="modal"
                                data-target="#defaultModal"
                              >
                                발주
                              </button>
                            </td>
                          </tr>
                        </tbody>
                        <% }) %>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- content-wrapper ends -->
          <!-- partial:partials/_footer.html -->
          <footer class="footer">
            <div
              class="
                d-sm-flex
                justify-content-center justify-content-sm-between
              "
            >
