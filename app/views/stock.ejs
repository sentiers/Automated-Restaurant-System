<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>5성매장관리</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="css/popup.css" />
    <link rel="stylesheet" href="vendors/feather/feather.css" />
    <link rel="stylesheet" href="vendors/ti-icons/css/themify-icons.css" />
    <link rel="stylesheet" href="vendors/css/vendor.bundle.base.css" />
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link
      rel="stylesheet"
      href="vendors/datatables.net-bs4/dataTables.bootstrap4.css"
    />
    <link rel="stylesheet" href="vendors/ti-icons/css/themify-icons.css" />
    <link
      rel="stylesheet"
      type="text/css"
      href="js/select.dataTables.min.css"
    />
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="css/vertical-layout-light/style.css" />
    <!-- endinject -->
    <link rel="shortcut icon" href="images/favicon.png" />
  </head>

  <body>
    <div class="container-scroller">
      <!-- partial:partials/_navbar.html -->
      <%- include('navbar.html') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial -->
        <!-- partial:partials/_sidebar.html -->
        <%- include('sidebar.html') %>

        <!-- partial -->
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="col-12 col-xl-8 mb-4 mb-xl-0">
              <h3 class="font-weight-bold">재고관리</h3>
            </div>
            <div class="row">
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <button
                      type="button"
                      class="btn btn-primary"
                      onclick="location.href='/stockpage/create'"
                    >
                      재고추가
                    </button>
                    <div class="table-responsive">
                      <table class="table table-striped">
                        <thead>
                          <tr style="text-align: center">
                            <th>재고명</th>
                            <th>수량</th>

                            <th>가격</th>
                            <th>단위</th>
                            <th>납품업체</th>
                            <th>업체 번호</th>
                            <th>
                              <!--stock_name: String
                            stock_quantity: Number,
                            order_company: String,
                          order_price: Number
                          order_unit: String,
                        -->
                            </th>
                          </tr>
                        </thead>
                        <% datas.forEach(function(data) { %>
                        <tbody>
                          <tr class="stock-info">
                            <td><%= data.stock_name %></td>
                            <td><%= data.stock_quantity %></td>

                            <td><%= data.stock_order.order_price %></td>
                            <td><%=data.stock_order.order_unit %></td>
                            <td><%= data.stock_order.order_company%></td>
                            <td><%= data.stock_order.order_phone %></td>
                            <td>
                              <button
                                type="button"
                                class="btn"
                                onclick="location.href='/stockpage/<%= data._id %>'"
                                style="background-color: #b4ace2"
                              >
                                재고조회
                              </button>
                              <button
                                style="
                                  margin: 0px 0px 0px 10px;
                                  background-color: #91a1dc;
                                "
                                type="submit"
                                class="btn trigger_popup_fricc"
                              >
                                발주
                              </button>
                            </td>
                          </tr>
                        </tbody>
                        <% }) %>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- content-wrapper ends -->
          <!-- partial:partials/_footer.html -->
          <footer class="footer">
            <div
              class="
                d-sm-flex
                justify-content-center justify-content-sm-between
              "
            >
              <span
                class="
                  text-muted text-center text-sm-left
                  d-block d-sm-inline-block
                "
                >Copyright © 2021. Premium
                <a href="https://www.bootstrapdash.com/" target="_blank"
                  >Bootstrap admin template</a
                >
                from BootstrapDash. All rights reserved.</span
              >
              <span
                class="
                  float-none float-sm-right
                  d-block
                  mt-1 mt-sm-0
                  text-center
                "
                >Hand-crafted & made with
                <i class="ti-heart text-danger ml-1"></i
              ></span>
            </div>
            <div
              class="
                d-sm-flex
                justify-content-center justify-content-sm-between
              "
            >
              <span
                class="
                  text-muted text-center text-sm-left
                  d-block d-sm-inline-block
                "
                >Distributed by
                <a href="https://www.themewagon.com/" target="_blank"
                  >Themewagon</a
                ></span
              >
            </div>
          </footer>
          <!-- partial -->
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->

    <div class="hover_bkgr_fricc">
      <span class="helper"></span>
      <div class="popup-window">
        <div class="popup-close-button">&times;</div>

        <div class="form-group" style="display: none">
          <label for="name">id</label>
          <input type="text" class="form-control" name="stock_name" />
        </div>
        <div class="row">
          <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
              <div class="card-body">
                <div>
                  <label for="name">재고명</label>
                  <label class="stock-name">potato</label>
                </div>
                <div>
                  <label for="price">가격</label>
                  <label class="stock-price">10000</label>
                </div>
                <div>
                  <label for="unit">단위</label>
                  <label class="stock-unit">1kg</label>
                </div>
              </div>
            </div>
          </div>

          <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
              <div class="card-body">
                <div>
                  <label for="name">납품업체</label>
                  <label class="stock-company">쿠팡</label>
                </div>
                <div>
                  <label for="price">번호</label>
                  <label class="stock-number">010-9999-9999</label>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
              <div class="card-body">
                <form
                      class="forms-sample"
                      method="post"
                      action="/stockpage/order/"
                    >
                    <div class="form-group" style="display: none;">
                      <label for="company">id</label>
                      <input
                        type="text"
                        class="form-control"
                        name="_id"
                      />
                    </div>
                    <div
                      class="form-group"
                      style="display: flex; align-items: center"
                    >
                      <label for="quantity" style="width: 50px; margin-right: 5px"
                        >수량</label
                      >
                      <input
                        type="number"
                        class="form-control input-quantity"
                        name="order_quantity"
                        value="0"
                        onkeyup="calcTotal(value)"
                        onclick="calcTotal(value)"
                        oninput="this.value = 
 !!this.value && Math.abs(this.value) >= 0 ? Math.abs(this.value) : null"
                        min="0"
                      />
                    </div>
                    <button type="submit" class="btn btn-success">발주하기</button>
                </form>
              </div>
            </div>
          </div>

          <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
              <div class="card-body">
                <p>Total</p>
                <p><span class="total-quantity">30구 * 3</span> </br> <span class="total-price"> 30000원</span></p>  
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      const triggers = document.querySelectorAll(".trigger_popup_fricc");
      const popup = document.querySelector(".hover_bkgr_fricc");
      const close = document.querySelector(".popup-close-button");
      const infos = document.querySelectorAll(".stock-info");
      const totalCost =popup.querySelector(".total-price");
      const quantity = popup.querySelector(".total-quantity");
      const input = popup.querySelector(".input-quantity");
  
      triggers.forEach((trigger, index) => {
        trigger.addEventListener("click", (e) => {
          addInfo(index);
          popup.classList.add("show");
        });
      });

      close.addEventListener("click", () => {
        popup.classList.remove("show");
      });

      function calcTotal(value){
        const price = popup.querySelector(".stock-price").innerHTML;
        const unit =  popup.querySelector(".stock-unit").innerHTML

        let cost = value * price;
        cost = String(cost).replace(/(.)(?=(\d{3})+$)/g,'$1,');
        totalCost.innerHTML = `${cost}원`;
        quantity.innerHTML= `${unit} * ${value}`;
      }

      function addInfo(index) {
        const item = infos[index];
        input.value="0";
        popup.querySelector(".stock-name").innerHTML = item.cells[0].innerHTML;
        popup.querySelector(".stock-price").innerHTML = item.cells[2].innerHTML;
        popup.querySelector(".stock-unit").innerHTML = item.cells[3].innerHTML;
        popup.querySelector(".stock-company").innerHTML =
          item.cells[4].innerHTML;
        popup.querySelector(".stock-number").innerHTML =
          item.cells[5].innerHTML;
        
        totalCost.innerHTML = "0원" ;
        quantity.innerHTML= popup.querySelector(".stock-unit").innerHTML + " * 0";
      }
    </script>

    <!-- plugins:js -->
    <script src="vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="vendors/chart.js/Chart.min.js"></script>
    <script src="vendors/datatables.net/jquery.dataTables.js"></script>
    <script src="vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <script src="js/dataTables.select.min.js"></script>

    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="js/off-canvas.js"></script>
    <script src="js/hoverable-collapse.js"></script>
    <script src="js/template.js"></script>
    <script src="js/settings.js"></script>
    <script src="js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <script src="js/dashboard.js"></script>
    <script src="js/Chart.roundedBarCharts.js"></script>
    <!-- End custom js for this page-->
  </body>
</html>
