<div
  class="modal fade"
  id="orderAtOnceModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5
          class="modal-title"
          id="exampleModalLabel"
          style="font-size: 20px; font-weight: bold"
        >
          재고 한꺼번에 주문
        </h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <div class="modal-body">
        <!--
        <div class="select-ver">
          <label
            for="stock-list"
            class="col-form-label-sm"
            style="padding-bottom: 0px"
            >목록</label
          >
          <select
            class="form-select form-select-lg mb-3"
            aria-label=".form-select-lg example"
          >
            <option selected>[필수] 옵션을 선택해주세요</option>
            <% datas.forEach(function(data) { %>
            <option value="<%=data.stock_name%>"><%=data.stock_name%></option>
            <% }) %>
          </select>
        </div>
          -->
        <div class="dropdown-ver">
          <div class="btn-group" style="width: 100%">
            <button
              type="button"
              class="btn btn-outline-secondary dropdown-toggle"
              data-toggle="dropdown"
              aria-haspopup="true"
              aria-expanded="false"
            >
              [필수] 옵션을 선택해주세요
            </button>
            <div class="dropdown-menu" style="width: 100%">
              <% datas.forEach(function(data) { %>
              <a class="dropdown-item" href="#"> <%=data.stock_name%> </a>
              <% }) %>
            </div>
          </div>
        </div>
      </div>

      <div class="modal-footer">
        <form
          method="post"
          action="/stockpage/order"
          style="width: 100%; margin: 0px 10px"
        >
          <div class="form-group cart">
            <div class="form-group" style="display: none">
              <label for="name">재고 id</label>
              <input
                type="text"
                class="form-control stock-id"
                name="stock_id"
              />
            </div>
            <div class="form-group" style="">
              <span class="stock-name">재고명 /</span>
              <span class="stock-quantity">남은 수량</span>
              <div style="display: flex; margin: 0px 20px">
                <button
                  class="btn btn-outline-primary btn-sm down-quantity"
                  type="button"
                  style="border-radius: 50%; margin: 0px 20px 0px 10px"
                  disabled="true"
                >
                  <i class="fas fa-minus fa-xs"></i>
                </button>
                <input
                  type="text"
                  class="form-control stock-quantity"
                  name="order_quantity"
                  value="0"
                  onkeyup="calcTotal(value)"
                  onchange="calcTotal(value)"
                  oninput="this.value = 
  !!this.value && Math.abs(this.value) >= 0 ? Math.abs(this.value) : null"
                  min="0"
                  style="
                    text-align: center;
                    font-size: 18px;
                    border-color: transparent;
                    background-color: transparent;
                    background: linear-gradient(#7a7b7f, #7a7b7f) center bottom
                      2px / calc(100% - 10px) 1px no-repeat;
                  "
                />
                <button
                  class="btn btn-outline-primary btn-sm up-quantity"
                  type="button"
                  style="border-radius: 50%; margin: 0px 10px 0px 20px"
                >
                  <i class="fas fa-plus"></i>
                </button>
              </div>
            </div>

            <div style="display: flex; margin: 0px 20px">
              <button
                class="btn btn-outline-primary btn-sm down-quantity"
                type="button"
                style="border-radius: 50%; margin: 0px 20px 0px 10px"
                disabled="true"
              >
                <i class="fas fa-minus fa-xs"></i>
              </button>
              <input
                type="text"
                class="form-control stock-quantity"
                name="order_quantity"
                value="0"
                onkeyup="calcTotal(value)"
                onchange="calcTotal(value)"
                oninput="this.value = 
!!this.value && Math.abs(this.value) >= 0 ? Math.abs(this.value) : null"
                min="0"
                style="
                  text-align: center;
                  font-size: 18px;
                  border-color: transparent;
                  background-color: transparent;
                  background: linear-gradient(#7a7b7f, #7a7b7f) center bottom
                    2px / calc(100% - 10px) 1px no-repeat;
                "
              />
              <button
                class="btn btn-outline-primary btn-sm up-quantity"
                type="button"
                style="border-radius: 50%; margin: 0px 10px 0px 20px"
              >
                <i class="fas fa-plus"></i>
              </button>
            </div>
          </div>

          <div class="row">
            <div
              class="form-group total"
              style="width: 100%; margin: 10px 10px"
            >
              <span>Total</span>
              <div class="total" style="text-align: center">
                <span class="total-quantity">100kg * 200 =</span>
                <span class="total-cost" style="font-weight: bold">
                  2000000원
                </span>
              </div>
            </div>
          </div>
          <div
            style="margin-top: 20px; display: flex; justify-content: flex-end"
          >
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
              style="margin: 0px 10px"
            >
              취소
            </button>
            <button type="submit" class="btn btn-primary">주문하기</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
